" mouse
set mouse=a

" numebr and colour lines
set number
highlight LineNr ctermfg=DarkGrey

" vi compatiblity something something
set nocompatible

" these are probaly on by defualt anyways
filetype on
filetype plugin on
filetype indent on

" shift and tab lengths
set shiftwidth=4
set tabstop=4

" rip swp files
set nobackup

" serach things
set incsearch
set ignorecase

" for full caps searches, find full caps
set smartcase
set hlsearch
"set wildmenu
"set wildmode=list:longest

"clipboard stuff
set clipboard=unnamedplus

syntax on
